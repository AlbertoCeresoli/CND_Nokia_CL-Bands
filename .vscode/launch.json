{
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Launch Jupyter Notebook",
            "program": "${workspaceFolder}/${input:notebookFile}"
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "notebookFile",
            "description": "Select the Jupyter Notebook file to launch",
            "options": [
                "clbands.ipynb",
                "clbandsnew.ipynb",
                "cleanbands.ipynb"
            ]
        }
    ]
}